{
  "name": "gamebuddies-hub",
  "version": "1.0.0",
  "description": "GameBuddies Hub - Virtual multiplayer hub with Colyseus",
  "main": "server/index.ts",
  "scripts": {
    "start": "cd server && ts-node index.ts",
    "dev": "cd server && ts-node-dev --project tsconfig.json --respawn --transpile-only index.ts",
    "build": "cd server && tsc",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "gamebuddies",
    "colyseus",
    "multiplayer",
    "hub"
  ],
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.0"
  }
}
